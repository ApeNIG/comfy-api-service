{
  "forwardPorts": [8000, 8188],
  "portsAttributes": {
    "8000": { "label": "FastAPI", "onAutoForward": "openBrowser", "visibility": "public" },
    "8188": { "label": "ComfyUI", "onAutoForward": "openBrowser", "visibility": "public" }
  },
  "postCreateCommand": "bash -lc '.devcontainer/bootstrap.sh'",
  "postStartCommand": "bash -lc 'cd /workspaces/ComfyUI && . .venv/bin/activate && nohup python main.py --cpu --listen 0.0.0.0 --port 8188 > /workspaces/comfy-data/comfy.log 2>&1 &'"
}
